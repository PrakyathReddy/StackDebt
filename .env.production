# StackDebt Production Environment Configuration

# Database Configuration
POSTGRES_DB=stackdebt_encyclopedia
POSTGRES_USER=stackdebt_user
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=8000
DEBUG=false
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Cache Configuration
CACHE_TTL=3600

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_ANALYTICS=false

# Nginx Configuration
HTTP_PORT=80
HTTPS_PORT=443

# GitHub API Configuration (optional, for enhanced repository analysis)
GITHUB_TOKEN=your_github_personal_access_token_here

# Security Configuration
# Generate secure passwords for production:
# openssl rand -base64 32